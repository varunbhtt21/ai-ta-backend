# FastAPI Configuration
APP_NAME=AI-TA Backend
APP_VERSION=0.1.0
DEBUG=true
HOST=localhost
PORT=8000
ENVIRONMENT=development

# Security
SECRET_KEY=your-super-secret-key-here-please-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=ai_tutor_db
MONGODB_TEST_DB_NAME=ai_tutor_test_db
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=50

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600
CACHE_TTL=1800

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7
OPENAI_REQUEST_TIMEOUT=30

# Context Compression Settings
MAX_TOKENS_TIER_1=30000
MAX_TOKENS_TIER_2=60000
MAX_TOKENS_TIER_3=100000
COMPRESSION_TRIGGER_THRESHOLD=0.8

# Session Management
SESSION_TIMEOUT_MINUTES=60
MAX_CONCURRENT_SESSIONS=100

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_PATH=./uploads
ALLOWED_EXTENSIONS=.md,.txt,.json,.yaml,.yml

# Analytics & Monitoring
ENABLE_ANALYTICS=true
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10